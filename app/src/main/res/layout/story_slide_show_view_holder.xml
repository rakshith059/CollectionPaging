<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/story_slide_show_view_holder_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_opacity_25" />

    <ImageView
        android:id="@+id/story_slide_show_view_holder_iv_left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey"
        android:paddingLeft="@dimen/size_6dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingRight="@dimen/size_6dp"
        android:paddingBottom="@dimen/size_10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/story_slide_show_view_holder_view_pager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/story_slide_show_view_holder_view_pager"
        app:srcCompat="@drawable/ic_left_arrow" />

    <ImageView
        android:id="@+id/story_slide_show_view_holder_iv_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/grey"
        android:paddingLeft="@dimen/size_6dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingRight="@dimen/size_6dp"
        android:paddingBottom="@dimen/size_10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/story_slide_show_view_holder_view_pager"
        app:layout_constraintEnd_toEndOf="@+id/story_slide_show_view_holder_view_pager"
        app:layout_constraintTop_toTopOf="@+id/story_slide_show_view_holder_view_pager"
        app:srcCompat="@drawable/ic_right_arrow" />

</android.support.constraint.ConstraintLayout>