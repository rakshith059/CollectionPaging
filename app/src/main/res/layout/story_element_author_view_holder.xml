<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_element_author_view_holder_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_8dp">

    <LinearLayout
        android:id="@+id/fragment_story_detail_ll_section_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<include layout="@layout/story_hero_image_author_view_holder" />-->

        <LinearLayout
            android:id="@+id/fragment_story_detail_ll_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/fragment_story_detail_tv_section_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/size_8dp"
                android:paddingTop="@dimen/size_8dp"
                android:paddingRight="@dimen/size_8dp"
                android:paddingBottom="@dimen/size_4dp"
                android:text="@string/section"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_4dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintTop_toBottomOf="@+id/story_hero_image_author_view_holder_tv_section_name" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_story_detail_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left|center"
            android:textColor="@color/black_opacity_75"
            android:textSize="@dimen/size_20sp"
            android:visibility="gone" />

        <!--<include layout="@layout/section_underline_title_author_row" />-->
    </LinearLayout>


    <quintype.com.templatecollectionwithrx.utils.widgets.CustomRatingBar
        android:id="@+id/story_element_author_view_holder_item_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:isIndicator="true"
        android:visibility="gone"
        app:halfStars="true"
        app:layout_constraintTop_toBottomOf="@+id/fragment_story_detail_ll_section_title_container"
        app:maxStars="5"
        app:onlyForDisplay="true"
        app:starPadding="@dimen/size_2dp" />

    <include
        layout="@layout/author_image_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/story_element_author_view_holder_item_rating_bar" />

</android.support.constraint.ConstraintLayout>