    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/grey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_collapseMode="none">

                <ImageView
                    android:id="@+id/fragment_story_detail_iv_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_250dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:layout_collapseMode="none"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/pager_carousel_background_gradient" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <include layout="@layout/story_hero_image_author_view_holder" />

                    <!--<TextView-->
                    <!--android:id="@+id/fragment_story_detail_tv_title"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="@dimen/size_8dp"-->
                    <!--android:fontFamily="sans-serif-condensed"-->
                    <!--android:gravity="left|center"-->
                    <!--android:minLines="2"-->
                    <!--android:text="@string/collection_list_size"-->
                    <!--android:textColor="@color/black_opacity_75"-->
                    <!--android:textSize="@dimen/size_20sp"-->
                    <!--android:visibility="gone" />-->

                    <!--<include layout="@layout/section_underline_title_author_row" />-->
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:visibility="gone"
                app:layout_collapseMode="none" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>


