    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/grey"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_collapseMode="none">

                <ImageView
                    android:id="@+id/fragment_story_detail_iv_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_250dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:layout_collapseMode="none"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@drawable/pager_carousel_background_gradient" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--<include layout="@layout/story_hero_image_author_view_holder" />-->

                    <LinearLayout
                        android:id="@+id/fragment_story_detail_ll_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/fragment_story_detail_tv_section_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:paddingLeft="@dimen/size_8dp"
                            android:paddingTop="@dimen/size_8dp"
                            android:paddingRight="@dimen/size_8dp"
                            android:paddingBottom="@dimen/size_4dp"
                            android:text="@string/section"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_16sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_4dp"
                            android:layout_marginLeft="@dimen/size_8dp"
                            android:layout_marginRight="@dimen/size_8dp"
                            android:background="@color/colorPrimaryDark"
                            app:layout_constraintTop_toBottomOf="@+id/story_hero_image_author_view_holder_tv_section_name" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/fragment_story_detail_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_8dp"
                        android:layout_marginLeft="@dimen/size_16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="left|center"
                        android:minLines="2"
                        android:text="@string/collection_list_size"
                        android:textColor="@color/black_opacity_75"
                        android:textSize="@dimen/size_20sp"
                        android:visibility="gone" />

                    <!--<include layout="@layout/section_underline_title_author_row" />-->
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="@color/white_transparency_25"
                android:visibility="visible"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/black">

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
