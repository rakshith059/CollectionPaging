<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_inside_image_grid_row_cl_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_8dp"
        app:cardCornerRadius="@dimen/size_8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/title_inside_image_grid_row_iv_hero_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:fadeDuration="300"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:progressBarImage="@drawable/ic_full_star_review"
                app:progressBarImageScaleType="centerInside"
                app:roundBottomLeft="false"
                app:roundBottomRight="false"
                app:roundTopLeft="true"
                app:roundTopRight="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/pager_carousel_background_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8dp"
                app:layout_constraintBottom_toBottomOf="@+id/title_inside_image_grid_row_iv_hero_icon">

                <TextView
                    android:id="@+id/title_inside_image_grid_row_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_8dp"
                    android:ellipsize="end"
                    android:fontFamily="serif-monospace"
                    android:maxLines="3"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>