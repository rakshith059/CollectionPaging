<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_inside_image_slider_cl_slideshow_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_8dp"
    android:layout_marginTop="@dimen/size_4dp"
    android:layout_marginRight="@dimen/size_8dp"
    android:layout_marginBottom="@dimen/size_4dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/title_inside_image_slider_vp_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_450dp"
        app:layout_constraintStart_toStartOf="@+id/pager_carousel_title_row_iv_left_arrow" />

    <ImageView
        android:id="@+id/pager_carousel_title_row_iv_left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4dp"
        android:background="@color/grey"
        android:paddingLeft="@dimen/size_6dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingRight="@dimen/size_6dp"
        android:paddingBottom="@dimen/size_10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/title_inside_image_slider_circle_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_inside_image_slider_vp_pager"
        app:srcCompat="@drawable/ic_left_arrow" />

    <ImageView
        android:id="@+id/pager_carousel_title_row_iv_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_4dp"
        android:background="@color/grey"
        android:paddingLeft="@dimen/size_6dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingRight="@dimen/size_6dp"
        android:paddingBottom="@dimen/size_10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/title_inside_image_slider_circle_indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_right_arrow" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/title_inside_image_slider_circle_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/title_inside_image_slider_vp_pager" />

</android.support.constraint.ConstraintLayout>