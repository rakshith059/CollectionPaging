<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/story_big_fact_view_holder_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="@dimen/size_8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_24sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/story_big_fact_view_holder_tv_attribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="@dimen/size_8dp"
        android:textColor="@color/black_opacity_75"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/story_big_fact_view_holder_tv_content" />

</android.support.constraint.ConstraintLayout>