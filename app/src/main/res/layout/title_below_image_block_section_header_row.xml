<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_8dp"
        app:cardCornerRadius="@dimen/size_8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/title_below_image_block_section_header_row_iv_hero_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150dp"
                android:background="@color/colorPrimary"
                android:scaleType="fitXY" />

            <!--<quintype.com.templatecollectionwithrx.ui.main.fragments.SectionBlockTitleAuthorFragment-->
            <!--android:id="@+id/section_block_title_author_row_fragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/title_below_image_header_row_iv_hero_icon" />-->

            <include
                layout="@layout/section_block_title_author_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title_below_image_block_section_header_row_iv_hero_icon" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>