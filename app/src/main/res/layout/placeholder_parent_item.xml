<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_image_child_row_cv_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8dp"
    android:elevation="@dimen/size_8dp"
    app:cardCornerRadius="@dimen/size_8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/placeholder_parent_item_iv_hero_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150dp"
            android:background="@color/placeholder_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_8dp"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_parent_item_iv_hero_icon">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:layout_margin="@dimen/size_8dp"
                android:background="@color/placeholder_bg" />

            <View
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:background="@color/placeholder_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:background="@color/placeholder_bg" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>